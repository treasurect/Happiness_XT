<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="150dp"
              android:id="@+id/home_news_item_layout"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

        <TextView
            android:id="@+id/home_news_item_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/home_news_item_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                fresco:placeholderImage="@mipmap/pic_pageloading"
            android:scaleType="fitXY"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/home_news_item_image2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                fresco:placeholderImage="@mipmap/pic_pageloading"
                android:scaleType="fitXY"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/home_news_item_image3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                fresco:placeholderImage="@mipmap/pic_pageloading"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_news_item_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlock"/>

            <TextView
                android:id="@+id/home_news_item_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlock"/>

            <TextView
                android:id="@+id/home_news_item_liuyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"/>
        </LinearLayout>
</LinearLayout>