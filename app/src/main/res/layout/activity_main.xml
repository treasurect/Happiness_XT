<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray4"
    tools:context="com.treasure_ct.happiness_xt.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/pic_background"/>
        <TextView
            android:id="@+id/main_hint_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorOrange"
            android:textSize="16dp"
            android:padding="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/main_jump_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过》"
            android:textColor="@color/colorOrange"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:layout_marginTop="70dp"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/main_walk_right_animList"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/walk_right_anim_list"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="75dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/main_idle_animList"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/idle_anim_list"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="75dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/main_walk_left_animList"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/walk_left_anim_list"
        android:layout_gravity="center_vertical|right"
        android:layout_marginBottom="75dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/main_talk_animList"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/talk_anim_list"
        android:layout_gravity="center_vertical|right"
        android:layout_marginBottom="75dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/main_click_animList"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/click_anim_list"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/main_selectPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="50dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/main_entertainment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="段子 行天下"
                    android:gravity="center"
                    android:textColor="@color/colorOrange"
                    android:textStyle="bold"
                    android:background="@mipmap/pic_background1"
                    android:transitionName="entertainment"/>
                <TextView
                    android:id="@+id/main_life"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="日常 小帮手"
                    android:gravity="center"
                    android:textColor="@color/colorOrange"
                    android:textStyle="bold"
                    android:background="@mipmap/pic_background1"
                    android:transitionName="life"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/main_dynamic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="社区动态"
                    android:gravity="center"
                    android:textColor="@color/colorOrange"
                    android:textStyle="bold"
                    android:background="@mipmap/pic_background1"
                    android:transitionName="dynamic"/>
                <TextView
                    android:id="@+id/main_settings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="我的设置"
                    android:gravity="center"
                    android:textColor="@color/colorOrange"
                    android:textStyle="bold"
                    android:background="@mipmap/pic_background1"
                    android:transitionName="settings"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
