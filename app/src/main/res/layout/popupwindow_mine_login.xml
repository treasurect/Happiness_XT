<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#66000000"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="#66000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/bottom_white_frame_orange_radius15"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="登录后享受更多内容\n只为丰富你的知识"
                android:textColor="#9222"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/mine_popup_quit"
                android:layout_width="28dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_margin="20dp"
                android:src="@mipmap/icon_delete"/>
        </FrameLayout>

        <EditText
            android:id="@+id/mine_login_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittext_bg"
            android:hint="请输入手机号"
            android:inputType="number"
            android:paddingLeft="30dp"/>

        <EditText
            android:id="@+id/mine_login_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_bg"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="30dp"/>

        <TextView
            android:id="@+id/mine_popup_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="未注册的，快来注册呀"
            android:textColor="@color/colorOrange"/>

        <TextView
            android:id="@+id/mine_popup_loginin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/textview_bg"
            android:gravity="center"
            android:text="进入XT"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="————更多登录方式————"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_qqlogin"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_qq2"/>

                <ImageView
                    android:id="@+id/image_wechatlogin"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_weixin"/>

                <ImageView
                    android:id="@+id/image_sinalogin"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_sina"/>

                <ImageView
                    android:id="@+id/image_qqweibologin"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_tecentweibo"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>