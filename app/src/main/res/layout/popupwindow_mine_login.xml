<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#66000000"
              android:gravity="bottom"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff7556"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="登录后享受更多内容\n只为丰富你的知识"
                android:textColor="#9222"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:src="@mipmap/icon_delete"
                android:layout_margin="20dp"
                android:id="@+id/mine_popup_quit"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <EditText
                android:id="@+id/mine_login_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入手机号"
                android:paddingLeft="30dp"
                android:background="@drawable/edittext_bg"/>
        </FrameLayout>

        <EditText
            android:id="@+id/mine_login_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:hint="请输入密码"
            android:background="@drawable/edittext_bg"/>
        <TextView
            android:id="@+id/mine_popup_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未注册的，快来注册呀"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/mine_popup_loginin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/textview_bg"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="进入XT"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="————更多登录方式————"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_qq2"
                    android:id="@+id/image_qqlogin"/>

                <ImageView
                    android:id="@+id/image_wechatlogin"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_weixin"/>
                <ImageView
                    android:id="@+id/image_sinalogin"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_sina"/>
                <ImageView
                    android:id="@+id/image_qqweibologin"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_tecentweibo"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>