<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_life_assistant_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/colorWhite"
    tools:context="com.treasure_ct.happiness_xt.activity.life.LifeRecordActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorOrange">
        <ImageView
            android:id="@+id/record_btn_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_return"/>

        <TextView
            android:id="@+id/record_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="#f8f8f8"
            android:textSize="16sp"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/record_btn_send"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:text="发送"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_gravity="right"
            android:textColor="#f8f8f8"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/assistant_record_user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/assistant_record_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/assistant_record_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@null"
        android:padding="15dp"
        android:hint="记录你的生活"
        android:gravity="top"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/assistant_record_image1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/assistant_record_image2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:scaleType="fitXY"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/assistant_record_image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/assistant_record_image_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000"
                android:text="+1"
                android:textSize="40sp"
                android:gravity="center"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorGray"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/assistant_record_camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_camera"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/assistant_record_album"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_album"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"/>
    </LinearLayout>
</LinearLayout>
